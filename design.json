{
    "designSystem": {
      "name": "Modern AI Chatbot Interface",
      "version": "1.0",
      "description": "A clean, minimal design system for AI chatbot interfaces with gradient accents and glassmorphic elements"
    },
    
    "colorPalette": {
      "primary": {
        "gradient": {
          "start": "#9333EA",
          "end": "#EC4899",
          "direction": "135deg",
          "description": "Purple to pink gradient for primary brand elements"
        },
        "solid": "#8B5CF6"
      },
      "backgrounds": {
        "main": "#FFFFFF",
        "secondary": "#F9FAFB",
        "tertiary": "#F3F4F6",
        "chat": "#FAFAFA"
      },
      "text": {
        "primary": "#111827",
        "secondary": "#6B7280",
        "tertiary": "#9CA3AF",
        "onDark": "#FFFFFF"
      },
      "ui": {
        "border": "#E5E7EB",
        "divider": "#F3F4F6",
        "hover": "#F9FAFB",
        "shadow": "rgba(0, 0, 0, 0.05)"
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Inter', sans-serif",
        "mono": "'SF Mono', Monaco, 'Cascadia Code', monospace"
      },
      "scale": {
        "hero": {
          "fontSize": "32px",
          "lineHeight": "1.2",
          "fontWeight": "600",
          "letterSpacing": "-0.02em"
        },
        "heading": {
          "fontSize": "24px",
          "lineHeight": "1.3",
          "fontWeight": "600",
          "letterSpacing": "-0.01em"
        },
        "subheading": {
          "fontSize": "18px",
          "lineHeight": "1.4",
          "fontWeight": "500"
        },
        "body": {
          "fontSize": "15px",
          "lineHeight": "1.6",
          "fontWeight": "400"
        },
        "small": {
          "fontSize": "13px",
          "lineHeight": "1.5",
          "fontWeight": "400"
        },
        "micro": {
          "fontSize": "11px",
          "lineHeight": "1.4",
          "fontWeight": "500",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        }
      }
    },
    
    "spacing": {
      "unit": 4,
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px"
      },
      "containerPadding": {
        "mobile": "16px",
        "tablet": "24px",
        "desktop": "32px"
      }
    },
    
    "borderRadius": {
      "sm": "6px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "full": "9999px",
      "message": "18px",
      "button": "12px",
      "input": "12px",
      "card": "16px"
    },
    
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
      "glow": "0 0 40px rgba(147, 51, 234, 0.2)",
      "message": "0 2px 8px rgba(0, 0, 0, 0.06)"
    },
    
    "components": {
      "avatar": {
        "size": {
          "sm": "32px",
          "md": "40px",
          "lg": "48px"
        },
        "style": {
          "borderRadius": "full",
          "border": "2px solid white",
          "shadow": "0 2px 8px rgba(0, 0, 0, 0.1)"
        },
        "aiAvatar": {
          "background": "linear-gradient(135deg, #9333EA, #EC4899)",
          "iconColor": "white",
          "glowEffect": true
        }
      },
      
      "messageContainer": {
        "maxWidth": "720px",
        "padding": {
          "vertical": "12px",
          "horizontal": "16px"
        },
        "gap": "12px",
        "alignment": {
          "user": "flex-end",
          "ai": "flex-start"
        }
      },
      
      "messageBubble": {
        "user": {
          "background": "#1F2937",
          "textColor": "#FFFFFF",
          "borderRadius": "18px",
          "padding": "12px 16px",
          "maxWidth": "70%",
          "fontSize": "15px"
        },
        "ai": {
          "background": "#F9FAFB",
          "textColor": "#111827",
          "borderRadius": "18px",
          "padding": "12px 16px",
          "maxWidth": "85%",
          "fontSize": "15px"
        }
      },
      
      "inputArea": {
        "container": {
          "background": "#FFFFFF",
          "borderTop": "1px solid #E5E7EB",
          "padding": "16px",
          "position": "sticky",
          "bottom": 0
        },
        "inputField": {
          "background": "#F9FAFB",
          "border": "1px solid #E5E7EB",
          "borderRadius": "12px",
          "padding": "12px 16px",
          "fontSize": "15px",
          "placeholderColor": "#9CA3AF",
          "focusBorder": "#8B5CF6",
          "transition": "all 0.2s ease"
        }
      },
      
      "button": {
        "primary": {
          "background": "linear-gradient(135deg, #9333EA, #EC4899)",
          "color": "white",
          "padding": "10px 20px",
          "borderRadius": "12px",
          "fontSize": "14px",
          "fontWeight": "500",
          "hover": {
            "transform": "translateY(-1px)",
            "shadow": "0 4px 12px rgba(147, 51, 234, 0.3)"
          }
        },
        "secondary": {
          "background": "#F3F4F6",
          "color": "#374151",
          "padding": "10px 20px",
          "borderRadius": "12px",
          "hover": {
            "background": "#E5E7EB"
          }
        },
        "icon": {
          "size": "40px",
          "borderRadius": "12px",
          "background": "transparent",
          "hover": {
            "background": "#F9FAFB"
          }
        }
      },
      
      "suggestionCard": {
        "background": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "borderRadius": "12px",
        "padding": "12px 16px",
        "hover": {
          "borderColor": "#8B5CF6",
          "shadow": "0 4px 12px rgba(147, 51, 234, 0.1)",
          "transform": "translateY(-2px)"
        },
        "transition": "all 0.2s ease",
        "cursor": "pointer"
      },
      
      "header": {
        "height": "64px",
        "background": "rgba(255, 255, 255, 0.8)",
        "backdropFilter": "blur(10px)",
        "borderBottom": "1px solid #E5E7EB",
        "padding": "0 24px",
        "position": "sticky",
        "top": 0,
        "zIndex": 100
      },
      
      "navigation": {
        "tabs": {
          "inactive": {
            "color": "#6B7280",
            "borderBottom": "2px solid transparent",
            "padding": "8px 16px"
          },
          "active": {
            "color": "#8B5CF6",
            "borderBottom": "2px solid #8B5CF6",
            "fontWeight": "500"
          },
          "hover": {
            "color": "#7C3AED",
            "background": "#F9FAFB"
          }
        }
      },
      
      "welcomeScreen": {
        "logoContainer": {
          "size": "80px",
          "background": "linear-gradient(135deg, #9333EA, #EC4899)",
          "borderRadius": "24px",
          "shadow": "0 20px 40px rgba(147, 51, 234, 0.2)",
          "animation": "pulse 2s ease-in-out infinite"
        },
        "heading": {
          "fontSize": "32px",
          "background": "linear-gradient(135deg, #374151, #111827)",
          "backgroundClip": "text",
          "webkitTextFillColor": "transparent"
        },
        "subheading": {
          "fontSize": "20px",
          "color": "#6B7280",
          "marginTop": "8px"
        }
      }
    },
    
    "animations": {
      "fadeIn": {
        "from": { "opacity": 0, "transform": "translateY(10px)" },
        "to": { "opacity": 1, "transform": "translateY(0)" },
        "duration": "0.3s",
        "easing": "ease-out"
      },
      "slideUp": {
        "from": { "transform": "translateY(20px)", "opacity": 0 },
        "to": { "transform": "translateY(0)", "opacity": 1 },
        "duration": "0.4s",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "pulse": {
        "0%": { "transform": "scale(1)" },
        "50%": { "transform": "scale(1.05)" },
        "100%": { "transform": "scale(1)" }
      },
      "glow": {
        "0%": { "boxShadow": "0 0 20px rgba(147, 51, 234, 0.2)" },
        "50%": { "boxShadow": "0 0 40px rgba(147, 51, 234, 0.4)" },
        "100%": { "boxShadow": "0 0 20px rgba(147, 51, 234, 0.2)" }
      }
    },
    
    "layout": {
      "maxWidth": "1200px",
      "chatMaxWidth": "800px",
      "sidebarWidth": "280px",
      "mobileBreakpoint": "768px",
      "tabletBreakpoint": "1024px",
      "grid": {
        "columns": 12,
        "gap": "24px"
      }
    },
    
    "effects": {
      "glassmorphism": {
        "background": "rgba(255, 255, 255, 0.7)",
        "backdropFilter": "blur(20px)",
        "border": "1px solid rgba(255, 255, 255, 0.3)"
      },
      "gradientText": {
        "background": "linear-gradient(135deg, #9333EA, #EC4899)",
        "backgroundClip": "text",
        "webkitTextFillColor": "transparent"
      },
      "hoverLift": {
        "transform": "translateY(-2px)",
        "transition": "transform 0.2s ease"
      }
    },
    
    "accessibility": {
      "focusRing": {
        "color": "#8B5CF6",
        "width": "2px",
        "offset": "2px",
        "style": "solid"
      },
      "minTouchTarget": "44px",
      "contrastRatios": {
        "normal": "4.5:1",
        "large": "3:1"
      }
    },
    
    "responsive": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "containerWidths": {
        "sm": "100%",
        "md": "100%",
        "lg": "1024px",
        "xl": "1280px"
      }
    }
  }